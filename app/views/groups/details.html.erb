<div class="card my-3">
  <div class="card-header">
    <% present(@group_details[:manager].employee) do |employee| %>
      <h3><%= employee.full_name %></h3>
    <% end %>
  </div>
  <div class="card-body">
    <table class="table table-striped">
      <thead>
      <tr>
        <th>Name</th>
        <th>Region</th>
        <th>Location</th>
        <th>Department</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @group_details[:managed_employees].each do |e| %>
        <% present(e) do |employee| %>
          <tr class=<%= employee.status %> >
            <td><%= employee.full_name %></td>
            <td><%= employee.region %></td>
            <td><%= employee.location %></td>
            <td><%= employee.department %></td>
            <td><%= link_to 'Remove', group_remove_employee_path(id: @group_details[:manager].id, employee_id: employee), class: "btn btn-sm btn-primary" %></td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>
</div>