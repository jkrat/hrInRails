<h1>Employees</h1>

<table class="table table-striped">
  <thead>
  <tr>
      <th>Name</th>
      <th>Region</th>
      <th>Location</th>
      <th>Department</th>
      <th>Balance</th>
  </tr>
  </thead>
  <tbody>
    <% @employees.each do |e| %>
      <% present(e) do |employee| %>
        <tr class=<%= employee.status %> >
        <td><%= link_to employee.full_name, employee  %></td>
          <td><%= employee.region %></td>
          <td><%= employee.location %></td>
          <td><%= employee.department %></td>
          <td><%= employee.balance %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
