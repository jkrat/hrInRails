<h1>Employees</h1>

<table class="table table-striped">
  <thead>
  <tr>
      <th>Name</th>
      <th>Region</th>
      <th>Location</th>
      <th>Department</th>
      <th>Balance</th>
      <th>Time Card</th>
  </tr>
  </thead>
  <tbody>
    <% @employees.each do |employee| %>
      <tr class=<%= employee.status %> >
      <td><%= link_to "#{employee.first_name} #{employee.last_name}", employee %></td>
        <td><%= employee.region %></td>
        <td><%= employee.location %></td>
        <td><%= employee.department %></td>
        <td><%= employee.balance %></td>

      </tr>
    <% end %>
  </tbody>
</table>
