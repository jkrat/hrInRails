<h2>Transaction <%= @transaction.id %></h2>
<div class="card my-3">
  <div class="card-header">
    <h3>Details</h3>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-6">
        <h6 class="mb-0">Created by: </h6>
        <h4>  <%= @transaction.created_by %></h4>
      </div>
      <div class="col-md-6">
        <h6 class="mb-0">Created On: </h6>
        <h4> <%= @transaction.created_at.strftime('%b %d, %Y') %></h4>
      </div>
    </div>
    <hr />
    <div class="row my-3">
      <div class="col-md-6">
        <h6 class="mb-0">Employee: </h6>
        <h4>  <%= link_to "#{@transaction.employee.first_name} #{@transaction.employee.last_name}", @transaction.employee %> </h4>
      </div>
      <div class="col-md-6">
        <h6 class="mb-0">Date: </h6>
        <h4> <%= @transaction.date.strftime('%a, %b %d, %Y') %></h4>
      </div>
    </div>
    <div class="row my-3">
      <div class="col-md-4">
        <h6 class="mb-0">Type: </h6>
        <h4> <%= @transaction.transaction_type %></h4>
      </div>
      <div class="col-md-4">
        <h6 class="mb-0">Status: </h6>
        <h4>  <%= @transaction.status %></h4>
      </div>
      <div class="col-md-3">
        <h6 class="mb-0">Change: </h6>
        <% if @transaction.delta > 0 %>
          <h3>+<%= @transaction.delta %></h3>
        <% else %>
          <h3><%= @transaction.delta %></h3>
        <% end %>
      </div>
    </div>
    <hr />
    <div class="row mt-3">
      <div class="col-md-10">
        <h6 class="mb-0">Description: </h6>
        <h4><%= @transaction.description %></h4>
      </div>
    </div>
  </div>
</div>
<div class="text-right">
  <%= link_to 'Back', :back, class: "btn btn-primary" %>
  <%= link_to 'Void', void_transaction_path(@transaction), class: "btn btn-secondary" %>
  <%= link_to 'Destroy', @transaction, method: :delete, data: { confirm: 'Are you sure you want to delete this transaction from the database? This action cannot be undone.'}, class: "btn btn-secondary" %>
</div>




