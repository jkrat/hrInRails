<h1>Transactions</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Type</th>
    <th>Change</th>
    <th>Description</th>
    <th></th>
  </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr class=<%= transaction.status == 'Void'? transaction.status :  transaction.transaction_type %> >
        <td><%= link_to "#{transaction.employee.first_name} #{transaction.employee.last_name}", transaction.employee %></td>
        <td><%= transaction.date %></td>
        <td><%= transaction.transaction_type %></td>
        <td><%= transaction.delta %></td>
        <td><%= transaction.description %></td>

        <td><%= link_to 'View', transaction, class: "btn btn-sm btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

